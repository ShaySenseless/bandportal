<div class="form_main">
	<div class="row">
		<%= form_tag do %>
			<div class="col-md-6">
				<div class="form-group">
				<% unless user_signed_in? %>
					<%= label_tag :name, t('.name') %>
				    <%= text_field_tag :name, nil, class: "form-control", placeholder: t('.name_placeholder') %>
			    </div>
				<div class="form-group">
					<%= label_tag :email, t('.email') %>
					<%= text_field_tag :email, nil, class: "form-control", placeholder: t('.email_placeholder') %></div>
				<% end %>
				<div class="form-group">
					<%= label_tag :message, t('message') %>
					<%= text_area_tag :message, nil, class: "form-control contact-message", 
						placeholder: t('.message_placeholder'), :rows => "15" %>
				</div>		
			</div>
			<%= submit_tag "Send", class: "btn btn-info" %>
		</div> 
		<% end %>
	</div>
</div>