<div class="form_main">
	<div class="row">
		<%= form_tag do %>
			<div class="col-md-6">
				<div class="form-group">
				<% unless user_signed_in? %>
					<%= label_tag :name, "Name" %>
				    <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
			    </div>
				<div class="form-group">
					<%= label_tag :email, "Email Address" %>
					<%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %></div>
				<% end %>
				<div class="form-group">
					<%= label_tag :message, "Message" %>
					<%= text_area_tag :message, nil, class: "form-control contact-message", 
						placeholder: "Enter Message", :rows => "15" %>
				</div>		
			</div>
			<%= submit_tag "Send", class: "btn btn-info" %>
		</div> 
		<% end %>
	</div>
</div>