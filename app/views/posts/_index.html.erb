<%= render 'home/navbar' %>

<%= render 'home/sidebar' %>

<div class="panel panel-default inline col-md-10" style="padding-left: 0">
  <!-- Default panel contents -->
  <!-- Table -->
  <table class="table">
	  <tr class="panel-heading" style="background-color: #e7e7e7">
		  <td>Posted on</td>
		  <td>Title</td>
		  <td>Link</td>
		  <td></td>
	  	  <td><%= link_to 'new post', new_post_path %></td>
	  </tr>
	<% @posts.each do |f| %>
		<tr>
			<td><%= f.created_at.strftime("%m/%d/%Y") %></td>
			<td><%= link_to f.title, post_path(f.id) %></td>
			<td><%= link_to "Link", f.link %></td>
			<% unless f.user_id = current_user %>
				<td><%= link_to 'edit', edit_post_path(f.id) %></td>
				<td><%= link_to 'delete', post_path(f.id), data: {confirm: "Are you sure you want to delete this post?"}, method: :delete %></td>
				<% else %>
					<td></td>
					<td></td>
			<% end %>
		</tr>
	<% end %>
  </table>
</div>

<%= render 'home/footer' %>