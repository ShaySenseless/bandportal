  <table class="table">
	  <tr class="panel-heading row">
		  <td class="col-md-1">Posted on</td>
		  <td class="col-md-8">Title</td>
		  <td class="col-md-1">Link</td>
		  <td class="col-md-1"></td>
		  <td class="col-md-1"></td>
	  </tr>
	<% @posts.each do |f| %>
		<tr class="row">
			<td><%= f.created_at.strftime("%m/%d/%Y") %></td>
			<td><%= link_to f.title, post_path(f.id) %></td>
			<td>
				<%= link_to "http://#{f.link}", :target => '_blank', class: "btn-sm" do %>
				    <i class="glyphicon glyphicon-link"></i>
				<% end %>
			</td>
			<td><%= link_to 'edit', edit_post_path(f.id) %></td>
			<td><%= link_to 'delete', post_path(f.id), data: {confirm: "Are you sure you want to delete this post?"}, method: :delete %></td>
		</tr>
	<% end %>
  </table>
<div><%= will_paginate @posts, style: "margin: 0" %></div>