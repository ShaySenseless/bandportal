<%= render 'home/navbar' %>

<%= render 'home/sidebar' %>

<div class="panel panel-default inline col-md-10" style="padding-left: 0">
  <!-- Default panel contents -->
  <table class="table">
 	  <tr class="panel-heading" style="background-color: #e7e7e7">
		  <td>Posted on</td>
		  <td>Title</td>
		  <td>Link</td>
		  <td></td>
		  <td></td>
	  	  <td><%= link_to 'new post', new_post_path %></td>
	  </tr>
  <!-- Table -->
		<tr>
			<td><%= @post.created_at.strftime("Posted on %m/%d/%Y at %I:%M%p") %></td>
			<td><%= @post.title %></td>
			<td><%= @post.description %></td>
			<td><%= link_to "Link", @post.link %></td>
			<% if @post.user_id = current_user %>
				<td><%= link_to 'edit', edit_post_path %></td>
				<td><%= link_to 'delete', @post, data: {confirm: "Are you sure you want to delete this post?"}, method: :delete %></td>
			<% end %>
		</tr>
  </table>
</div>
<%= render 'home/footer' %>